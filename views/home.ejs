                    <p>Product : <%= row.product_name %></p>
                    <p>Price : $<%= row.product_price %></p>
                    <div class="shop">
                        <form method="get" action="/addtocart?id=<%- row.id %>">
                            <input type="number" value="<%= row.id %>" name="id" hidden>
                            <button class="shopping">Add to Cart</button>
                            </form>
                        <form method="get" action="/addorder?id=<%- row.id %>">
